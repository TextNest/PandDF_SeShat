# ===========================================
# API Configuration
# ===========================================
# 백엔드 API 서버 URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket 서버 URL (실시간 스트리밍용)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ===========================================
# LLM API Configuration
# ===========================================
# OpenAI API Key (서버 사이드에서 사용)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# App Configuration
# ===========================================
# 앱 이름
NEXT_PUBLIC_APP_NAME=ManuAI-Talk

# 앱 URL (배포 시 변경)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 환경 (development, production, test)
NODE_ENV=development

# ===========================================
# Feature Flags (선택사항)
# ===========================================
# 음성 기능 활성화
NEXT_PUBLIC_ENABLE_VOICE=false

# 다국어 기능 활성화
NEXT_PUBLIC_ENABLE_I18N=false

# ===========================================
# Analytics (선택사항)
# ===========================================
# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# ===========================================
# Storage Configuration (선택사항)
# ===========================================
# AWS S3 (문서 저장용)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=

# ===========================================
# Security (선택사항)
# ===========================================
# JWT Secret (관리자 인증용)
JWT_SECRET=your_jwt_secret_here

# API Rate Limit
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000